<!DOCTYPE html>
<html>
<head lang="en">
  <meta charset="UTF-8">
   <link rel="stylesheet" href="/css/bootstrap.css">
  <link rel="stylesheet" href="/css/font-awesome.css">
  <link rel="stylesheet" href="/css/AdminLTE.css">
  <link rel="stylesheet" href="/css/normalize.css">
  <style>
    .chat-left{
        padding-right: 0;
    }
    .chat-right{
        padding-left: 0;
    }
    .chat-window{
        height: 600px;
    }
    #img-file{
      display: none;
      
    }
    .img-rounded{
        width: 100px;
    }
    #curtain{
        position: absolute;
        top: 0;
        left: 0;
        background: #00000059;
        width: 100%;
        z-index: 1000;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
  </style>
</head>
<body>
    <div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 chat-left">
            <ul class="list-group"></ul>
        </div>
        <div class="col-sm-9 chat-right">
            <div class="box box-primary box-solid direct-chat direct-chat-primary">
                <div class="box-header with-border">
                    <h3 class="box-title"></h3>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-toggle="tooltip" title="Contacts" data-widget="chat-pane-toggle"><i class="fa fa-comments"></i></button>
                        <button class="btn btn-box-tool remove" ><i class="fa fa-times"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="direct-chat-messages chat-window">
                    </div>
                    <div class="direct-chat-contacts chat-window">
                        <ul class="contacts-list">
                        </ul>
                    </div>
                </div>
                <div class="box-footer">
                    <div class="input-group"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/jquery.js"></script>
<script src="/js/bootstrap.js"></script>
<script src="/js/moment.js"></script>
<script src="/js/adminlte.js"></script>
<script>
    console.log(window.innerHeight)

    const $list_group = $('.list-group');
    const $chat_right = $('.chat-right');
    
    const $window = $(window);
    
    const $direct_chat_messages = $('.direct-chat-messages');


    $('.remove').click(function() {
        $('.box-title').text('');
        $('.input-group').html('');
        
    });

    

    const ip = `http://localhost:3000/{{shop}}`;

    
    //创建一个socket客户端
    const socket = io(ip);
    //连接成功
    socket.on('connect', function log(){
        socket.emit('get_rooms');
    });

    //显示房间列表
    socket.on('show_rooms', function showRooms(roomNameList){
        roomNameList.forEach(function(roomID) {
            $list_group.append(`<li class="list-group-item" onclick="listClick(this)">${roomID}</li>`);
        }); 
    });
    
    
    const listClick = function show(li){
        let roomID = $(li).text();

        //显示聊天窗口
        $('.box-title').text(roomID);
        $('.input-group').html('<input type="text" name="message" placeholder="请输入" class="form-control"><span class="input-group-btn"><button type="button" class="btn btn-primary btn-flat">+</button></span>');
        
        const data = {
            id: '{{id}}',
            roomID
        }
        socket.emit('join', data);

        const $form_control = $('.form-control');
        //监听键盘事件
        $window.keydown(function monitor(event){
            if (!(event.ctrlKey || event.metaKey || event.altKey)) {
                $form_control.focus();
            }

            if(event.which === 13){
                const message = $form_control.val().trim();

                //发送消息并显示
                if(message !== ''){
                    
                    $direct_chat_messages.append(`<div class="direct-chat-msg"><div class="direct-chat-info clearfix"><span class="direct-chat-name pull-left">{{id}}</span> <span class="direct-chat-timestamp pull-right">${moment().format('MMMM Do YYYY, h:mm:ss')}</span></div><img class="direct-chat-img" src="..//img/u.png" alt="message user image"><div class="direct-chat-text">${message}</div></div>`);
                    
                    const db = {
                        shop: '{{shop}}',
                        id: '{{id}}',
                        message,
                        md5: '{{md5}}'
                    }

                    const data = {
                        shop: '{{shop}}',
                        id: '{{id}}',
                        message,
                        roomID,
                        md5: '{{md5}}'
                    }
                    $('.direct-chat-messages.chat-window').scrollTop(9999);
                    socket.emit('new_message', data, db);
                    
                    
                    $form_control.val('');
                }
                else{
                    alert('请不要发送空白消息')
                    $form_control.val('');
                }
            }
            else{
                console.log('正在输入');
            }
        });

        //接收新消息
        socket.on('new_message', function message(data){
            const serviceMessage = {
                goods: 'xxxxxx',
                id: `${data.id}`,
                message
            };
           
            $direct_chat_messages.append(`<div class="direct-chat-msg right"><div class="direct-chat-info clearfix"><span class="direct-chat-name pull-right">${data.id}</span><span class="direct-chat-timestamp pull-left">${moment().format('MMMM Do YYYY, h:mm:ss')}</span></div><img class="direct-chat-img"src="../img/u.png"alt="message user image"><div class="direct-chat-text">${data.message}</div></div>`);
            $('.direct-chat-messages.chat-window').scrollTop(9999);
        });
    }    
    

</script>

</body>
</html>